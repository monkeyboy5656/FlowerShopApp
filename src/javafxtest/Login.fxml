<AnchorPane id="AnchorPane" prefHeight="466.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxtest.LoginController">
   <children>
      <Pane layoutX="3.0" prefHeight="466.0" prefWidth="468.0">
         <children>
            <Label layoutX="22.0" layoutY="31.0" text="Willkommen zum FlowerShop!">
               <font>
                  <Font name="Geneva" size="24.0" />
               </font>
            </Label>
            <PasswordField fx:id="tfPassword" layoutX="126.0" layoutY="132.0" prefHeight="37.0" prefWidth="217.0" />
            <Label layoutX="127.0" layoutY="107.0" text="Passwort:" />
            <Label layoutX="126.0" layoutY="189.0" text="User Type:" />
