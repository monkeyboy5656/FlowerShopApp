               <toggleGroup>
                  <ToggleGroup fx:id="rbToggle" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="rbCustomer" layoutX="266.0" layoutY="221.0" mnemonicParsing="false" text="Kunde" toggleGroup="$rbToggle" />
